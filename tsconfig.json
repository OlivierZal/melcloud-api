{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "noImplicitOverride": true,
    "noUncheckedSideEffectImports": true,
    "outDir": "dist",
    "rewriteRelativeImportExtensions": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2024"
  }
}
